pipeline {
    agent any

    stages {
        stage('Build Environment'){
            steps {
                echo 'Building environment'
                sh 'PATH=$PATH:/usr/local/bin'
                sh 'pwd'
                sh 'terraform task3/init'
                sh 'terraform task3/plan -out my_plan'
                sh 'terraform task3/apply my_plan'
            }
        }
        stage('Sleep for 5 minutes'){
            steps {
                echo 'Waiting for 5 minutes before cleanup'
                sleep(300)
            }
        }
        stage('Destroy environment') {
            steps {
                echo 'Destroying environment'
                sh 'terraform destroy --auto-approve'
            }
        }
    }
}
